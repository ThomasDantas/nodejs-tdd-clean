{
  "name": "nodejs-tdd-clean",
  "version": "1.0.0",
  "description": "Nodejs, com TDD e Clean Architecture",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --verbose --colors --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "coveralls": "^3.0.11",
    "husky": "^4.0.0-beta.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "express": "^4.17.1",
    "fast-glob": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.5",
    "nodemon": "^2.0.7",
    "validator": "^13.5.2"
  }
}
